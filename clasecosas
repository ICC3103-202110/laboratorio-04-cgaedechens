//modo arrow function
const sum = (a,b) => a+b;
console.log(sum(1,2));

const greet = (name) =>'hola, ${name}'; //no me funciona el sigo $
console.log(greet("gonzalo"));

//numeros pares
const pair = x => {
    if(x % 2 === 0)
        return true;
    else
        return false;
}
// o
const isEven  = x => x % 2 === 0;

//prints
console.log(isEven(2));
console.log(pair(2));
